pipeline {
    agent any

    environment {
        DEPLOY_TARGET = "staging"
    }

    stages {
        stage('Build') {
            steps {
                echo "Building the for deployment target: ${env.BRANCH_NAME}"
            }
        }

        stage('Inject secret') {
            steps {
                withCredentials([string(credentialId: 'API_KEY', variable: 'API_KEY_VAR')]) {
                    echo "Secret key is available now."
                    sh 'echo "My API Key is: $API_KEY_VAR" > secret.txt'
                }
                echo "Secret key has been hidden again"
            }
        }

        stage('Deploy to staging') {
            when {
                branch 'dev'
            }
            steps {
                echo "deployment to ${env.DEPLOY_TARGET} is in progress"
            }
        }

        stage('Deploy to production') {
            when {
                branch 'main'
            }
            steps {
                echo "deployment to production is in progress"
            }
        }
    }
}